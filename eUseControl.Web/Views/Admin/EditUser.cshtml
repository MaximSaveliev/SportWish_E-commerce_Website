@model eUseControl.Domain.Entities.User
@using eUseControl.Web.Extensions
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/Layouts/_Admin.cshtml";
}
<div class="d-flex justify-content-center" style="font-size: 2.5em; font-weight: 500;">Edit User @Model.NickName</div>
<section class="d-flex justify-content-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal container">
            <div class="form-group text-register" style="width: 350px;">
                @Html.LabelFor(model => model.NickName)
                @Html.TextBoxFor(model => model.NickName, new { @class = "form-control" })
            </div>

            <div class="form-group text-register" style="width: 350px;">
                @Html.LabelFor(model => model.UserName)
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
            </div>

            <div class="form-group text-register" style="width: 350px;">
                @Html.LabelFor(model => model.UserSurname)
                @Html.TextBoxFor(model => model.UserSurname, new { @class = "form-control" })
            </div>

            <div class="form-group text-register" style="width: 350px;">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            </div>
            @if (System.Web.HttpContext.Current.GetMySessionObject().AccessLevel == eUseControl.Domain.Enums.URole.ADMINISTRATOR)
            {
                <div class="form-group text-register" style="width: 350px;">
                    @Html.LabelFor(model => model.AccessLevel)
                    @Html.DropDownListFor(model => model.AccessLevel, new SelectList(Enum.GetValues(typeof(eUseControl.Domain.Enums.URole))), "- Select -", new { @class = "form-control" })
                </div>
            }
            <p></p>
            <div class="d-flex justify-content-center"><button type="submit" class="btn btn-primary" style="width: 125px;">Save</button></div>
        </div>
    }
</section>

