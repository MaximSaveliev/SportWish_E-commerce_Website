@model eUseControl.Domain.Entities.User
@{
    ViewBag.Title = "DeleteUser";
    Layout = "~/Views/Shared/Layouts/_Admin.cshtml";
}

<div class="d-flex justify-content-center" style="font-size: 2.5em; font-weight: 500;">Delete User @Model.NickName</div>

<body>
    <section style="margin-top: 45px; color:red">
        <section class="container text-register" style="text-align: center">
            <h3>Are you sure you want to delete this user - @Model.NickName?</h3>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.NickName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NickName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>

                    <dt>
                        @Html.DisplayNameFor(model => model.AccessLevel)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AccessLevel)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default text-register" /> |
                        @Html.ActionLink("Back to List", "ListUsers", "Admin")
                    </div>
                }
            </div>
        </section>
    </section>
</body>