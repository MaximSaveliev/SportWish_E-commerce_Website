@model WebAplication.Models.UserRegisterForm

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/Layouts/_Authentication.cshtml";
}

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="mask d-flex justify-content-center h-100 gradient-custom-3">
                <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <h4 class="mtext-105 cl2 txt-center p-b-30">
                            Create an account
                        </h4>

                        @Html.ValidationMessageFor(x => x.NickName, "", new { @class = "text-danger p-l-5" })
                        @Html.LabelFor(model => model.NickName, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "NickName" })
                        <div class="bor8 how-pos4-parent">
                            @Html.TextBoxFor(x => x.NickName, new
                            {
                                @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                                placeholder = "NickName"
                            })
                        </div>

                        @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger p-l-5" })
                        @Html.LabelFor(model => model.UserName, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "UserName" })
                        <div class="bor8 how-pos4-parent">
                            @Html.TextBoxFor(x => x.UserName, new
                            {
                                @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                                placeholder = "User Name"
                            })
                        </div>

                        @Html.ValidationMessageFor(x => x.UserSurname, "", new { @class = "text-danger p-l-5" })
                        @Html.LabelFor(model => model.UserSurname, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "UserSurname" })
                        <div class="bor8 how-pos4-parent">
                            @Html.TextBoxFor(x => x.UserSurname, new
                            {
                                @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                                placeholder = "User Surname"
                            })
                        </div>

                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger p-l-5" })
                        @Html.LabelFor(model => model.Email, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "Email" })
                        <div class="bor8 how-pos4-parent">
                            @Html.TextBoxFor(x => x.Email, new
                            {
                                @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                                placeholder = "Email",
                                type = "email"
                            })
                        </div>

                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger p-l-5" })
                        @Html.LabelFor(model => model.Password, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "Password" })
                        <div class="bor8 how-pos4-parent">
                            @Html.TextBoxFor(x => x.Password, new
                            {
                                @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                                placeholder = "Password",
                                type = "password"
                            })
                        </div>

                        @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger p-l-5" })
                        @Html.LabelFor(model => model.ConfirmPassword, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "ConfirmPassword" })
                        <div class="bor8 m-b-20 how-pos4-parent">
                            @Html.PasswordFor(x => x.ConfirmPassword, new
                            {
                                @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                                placeholder = "Confirm Password"
                            })
                        </div>

                        <div>
                            <div class="mb-3 stext-111 cl6 p-b-26">
                                By clicking register you are accepting our
                                <a class="cl1" href="#">Terms & Conditions and Security</a> and
                                <a class="cl1" href="#">Privacy & Cookie Policy</a>
                            </div>

                            <div class="d-flex justify-content-center">
                                <button class="flex-c-m stext-101 cl0 size-118 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                                    Sign Up
                                </button>
                            </div>
                            <div class="flex-b justify-content-center" style="margin-top: 10px">
                                <p>Have already an account? <a href="@Url.Action("SignIn", "Account")" class="fw-bold text-register cl1">Login here</a></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>
