                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="text-lg">
                                    <tr class="bg-white dark:bg-gray-800">
                                        <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                            @Html.DisplayNameFor(model => model.NickName)
                                        </th>
                                        <td class="px-6 py-2">
                                            @Html.DisplayFor(model => model.NickName)
                                        </td>
                                    </tr>
                                    <tr class="bg-white dark:bg-gray-800">
                                        <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                            @Html.DisplayNameFor(model => model.UserName)
                                        </th>
                                        <td class="px-6 py-2">
                                            @Html.DisplayFor(model => model.UserName)
                                        </td>
                                    </tr>
                                    <tr class="bg-white dark:bg-gray-800">
                                        <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                            @Html.DisplayNameFor(model => model.UserSurname)
                                        </th>
                                        <td class="px-6 py-2">
                                            @Html.DisplayFor(model => model.UserSurname)
                                        </td>
                                    </tr>
                                    <tr class="bg-white dark:bg-gray-800">
                                        <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <td class="px-6 py-2">
                                            @Html.DisplayFor(model => model.Email)
                                        </td>
                                    </tr>
                                    @if (System.Web.HttpContext.Current.GetMySessionObject().AccessLevel == eUseControl.Domain.Enums.URole.ADMINISTRATOR) 
                                    {
                                        <tr class="bg-white dark:bg-gray-800">
                                            <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                                @Html.DisplayNameFor(model => model.AccessLevel)
                                            </th>
                                            <td class="px-6 py-2">
                                                @Html.DisplayFor(model => model.AccessLevel)
                                            </td>
                                        </tr>
                                    }
                                    <tr class="bg-white dark:bg-gray-800">
                                        <td scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                            @Html.ActionLink("Edit", "EditUser", new { id = System.Web.HttpContext.Current.GetMySessionObject().Id }) |
                                            @Html.ActionLink("Back on Home Page", "Index", "Home")
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
