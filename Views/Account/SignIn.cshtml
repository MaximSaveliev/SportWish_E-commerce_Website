@using System.Web.Optimization
@model WebAplication.Models.UserLogin
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/Layouts/_Authentication.cshtml";
}


<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="mask d-flex justify-content-center h-100 gradient-custom-3">
                <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                    <form>
                        <h4 class="mtext-105 cl2 txt-center p-b-30">
                            Sign In
                        </h4>
                        @using (Ajax.BeginForm("SignIn", "Account", null, new AjaxOptions
                        {
                            HttpMethod = "POST",
                            UpdateTargetId = "login-form",
                            OnSuccess = "onSuccess",
                            OnFailure = "onFailure"
                        }, new { id = "login-form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.LabelFor(x => x.Email, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "email-input" })
                            <div class="bor8 m-b-20 how-pos4-parent">
                                <!--<input class="stext-117 cl2 plh3 size-116 p-l-30 p-r-30" type="text" name="email" placeholder="Email">-->

                                @Html.TextBoxFor(x => x.Email, new
                           {
                               @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                               title = "Please enter your Email adress",
                               placeholder = "example@gmail.com",
                               id = "email-input",
                               name = "email",
                               type = "text"
                           })
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>
                            @Html.LabelFor(x => x.Password, new{ @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "password-input"})
                            <div class="bor8 m-b-20 how-pos4-parent">
                                <!--<input class="stext-117 cl2 plh3 size-116 p-l-30 p-r-30" type="text" name="email" placeholder="Password">-->

                                @Html.TextBoxFor(x => x.Password, new
                           {
                               @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                               title = "Please enter your Password",
                               placeholder = "********",
                               id = "password-input",
                               name = "password",
                               type = "password"
                           })
                            </div>

                            <div class="form-check d-flex justify-content-start mb-3 mb-3 stext-117 cl2 p-l-30 p-r-30">
                                <!--<input class="form-check-input"
                                           type="checkbox"
                                           value=""
                                           id="form1Example3" />
                                <label class="form-check-label" for="form1Example3">
                                    Remember password
                                </label>-->
                                @Html.LabelFor(x => x.Remember, new { @class = "form-check-label", @for= "form1Example3" })
                                @Html.TextBoxFor(x => x.Remember, new
                           {
                               @class = "form-check-input",
                               @style = "margin: 0.37em 2em 0.37em 0;",
                               placeholder = "Enter your Password",
                               id = "form1Example3",
                               name = "remember",
                               type = "checkbox"
                           })
                            </div>

                            <div class="mb-3 stext-113 cl2 d-flex justify-content-center">
                                Don't have an account?
                                <a class="cl1 pl-1" href="/account/signUp">Sign up</a>

                            </div>

                            <div class="d-flex justify-content-center">
                                <a href="@Url.Action("SignIn","Account")" class="flex-c-m stext-101 cl0 size-118 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                                    Sign In
                                </a>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
</section>





    </body>

